<odoo>
    <!-- Delivery Report Wizard View -->
    <record id="view_delivery_report_wizard_form" model="ir.ui.view">
        <field name="name">delivery.report.wizard.form</field>
        <field name="model">delivery.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Delivery Report">
                <group>
                    <field name="investment_request_id"/>
                    <field name="name"/>
                </group>
                <footer>
                    <button string="Create" name="action_create" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Evaluation Report Wizard View -->
    <record id="view_evaluation_report_wizard_form" model="ir.ui.view">
        <field name="name">evaluation.report.wizard.form</field>
        <field name="model">evaluation.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Evaluation Report">
                <group>
                    <field name="investment_request_id"/>
                    <field name="name"/>
                </group>
                <footer>
                    <button string="Create" name="action_create" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Project Follow-up Report Wizard View -->
    <record id="view_project_followup_report_wizard_form" model="ir.ui.view">
        <field name="name">project.followup.report.wizard.form</field>
        <field name="model">project.followup.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Project Follow-up Report">
                <group>
                    <field name="investment_request_id"/>
                    <field name="name"/>
                </group>
                <footer>
                    <button string="Create" name="action_create" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Contract Wizard View -->
    <record id="view_contract_wizard_form" model="ir.ui.view">
        <field name="name">contract.wizard.form</field>
        <field name="model">contract.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Contract">
                <group>
                    <field name="investment_request_id"/>
                    <field name="name"/>
                </group>
                <footer>
                    <button string="Create" name="action_create" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_delivery_report_wizard" model="ir.actions.act_window">
        <field name="name">Create Delivery Report</field>
        <field name="res_model">delivery.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="action_evaluation_report_wizard" model="ir.actions.act_window">
        <field name="name">Create Evaluation Report</field>
        <field name="res_model">evaluation.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="action_project_followup_report_wizard" model="ir.actions.act_window">
        <field name="name">Create Project Follow-up Report</field>
        <field name="res_model">project.followup.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="action_contract_wizard" model="ir.actions.act_window">
        <field name="name">Create Contract</field>
        <field name="res_model">contract.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
